{
  "family": "ecs-rds-gha-demo",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::425210931122:role/ecsTaskExecutionRoleDemo",
  "taskRoleArn": "arn:aws:iam::425210931122:role/ecsTaskRoleDemo",
  "containerDefinitions": [
    {
      "name": "app",
      "image": "<IMAGE_URI>",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "PORT",
          "value": "80"
        },
        {
          "name": "APP_VERSION",
          "value": "1.0.0"
        },
        {
          "name": "GIT_SHA",
          "value": "set-by-ci"
        },
        {
          "name": "FEATURE_NEW_UI",
          "value": "false"
        },
        {
          "name": "DB_HOST",
          "value": "database-1.cpo0y4oginl5.eu-west-2.rds.amazonaws.com"
        },
        {
          "name": "DB_PORT",
          "value": "3306"
        },
        {
          "name": "DB_NAME",
          "value": "appdb"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ecs-rds-gha-demo",
          "awslogs-region": "eu-west-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "wget -qO- http://localhost/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 15
      },
      "secrets": [
        {
          "name": "DB_USER",
          "valueFrom": "arn:aws:secretsmanager:eu-west-2:425210931122:secret:rds!db-c3376a1e-8707-4d1a-85ec-ab1416683a88-to9gTg:username::"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:eu-west-2:425210931122:secret:rds!db-c3376a1e-8707-4d1a-85ec-ab1416683a88-to9gTg:password::"
        }
      ]
    }
  ]
}
